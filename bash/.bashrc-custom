# Watch fucntion : shortcut for ssks yarn etc.
watch() {
  if [ -z "$1" ]
  then
    ssks yarn watch
  else
    ssks yarn workspace "$1" watch
  fi
}

# Dev fucntion : shortcut for ssks yarn etc.
dev() {
  if [ -z "$1" ]
  then
    ssks yarn dev
  else
    ssks yarn workspace "$1" dev
  fi
}

# Home goes back to home and clear
alias home="cd && clear" 

